{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "separate-pull-requests": true,
  "prerelease": true,
  "versioning": "prerelease",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "ğŸš€ Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "ğŸ› Bug Fixes",
      "hidden": false
    },
    {
      "type": "build",
      "section": "ğŸ“¦ï¸ Build System, Dependencies",
      "hidden": false
    }
  ],
  "packages": {
    "app": {
      "release-type": "node",
      "prerelease-type": "alpha",
      "extra-files": [
        { "type": "generic", "path": "pubspec.yaml" },
        { "type": "yaml", "path": "/devops/templates/web-app/compose.yaml" }
      ]
    },
    "server": {
      "release-type": "node",
      "prerelease-type": "alpha",
      "extra-files": [
        "Directory.Build.props",
        "/devops/templates/server/compose.yaml"
      ]
    },
    "keycloak": {
      "release-type": "node",
      "prerelease-type": "alpha",
      "extra-files": ["/devops/templates/keycloak/compose.yaml"]
    }
  }
}
